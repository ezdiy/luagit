#!/bin/bash
SRC="http://github.com/ezdiy/luagit.git"
BASE=~/.luagit
REPO=$BASE/repo
LIB=$BASE/lib
if [ ! -d $BASE ]; then
	git clone $SRC $BASE
fi
cd $BASE
mkdir -p $REPO

function do_install()
{
	function import()
	{
		file="$2"
		ext=${file##*.} 
		if [ -z "$3" ]; then
			fl=`echo "$1" | sed -e 's#\.#/#g'`
			mkdir -p `dirname "$LIB/$fl"`
			cp -f "$2" "$LIB/$fl.lua"
		fi
	}
	cd $REPO/$1
	. $BASE/spec/$1 
#2>/dev/null
}

function do_update()
{
	INPUT=""
	function source()
	{
		DIR=`basename $INPUT`
		if [ ! -d "$REPO/$DIR" ]; then
			(git clone $1 $REPO/$DIR > /dev/null; echo -n "#")&
		else
			(cd $REPO/$DIR; git pull > /dev/null; echo -n "#")&
		fi
	}

	echo "Updating packages"
	echo -n "["
	for n in $BASE/spec/*; do echo -n .; done
	echo -ne "]\r["

	for n in $BASE/spec/*; do
		INPUT=$n
		. $n 2> /dev/null
	done
	wait
	echo "] OK!"
}

case $1 in
	"update")
		echo -n "Updating LuaGIT.."
		cd $BASE && git pull
		do_update
		;;
	"install")
		do_install $2
		;;
	*)
		echo "Unknown command '$1'"
		exit 1
		;;
esac

