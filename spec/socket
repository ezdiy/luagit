source "https://github.com/LuaDist/luasocket.git"
summary "Network support for the Lua language"
detail "LuaSocket is a Lua extension library that is composed by two parts: a C core"
detail "that provides support for the TCP and UDP transport layers, and a set of Lua"
detail "modules that add support for functionality commonly needed by applications"
detail "that deal with the Internet."
homepage "http://luaforge.net/projects/luasocket/"
license "MIT"
make -C src SOCKET_SO="socket.so" MIME_SO="mime.so" CFLAGS="-I/usr/include/lua5.1 -pedantic -Wall -O2 -fpic"
import "socket" "src/socket.lua"
import "mime" "src/mime.lua"
import "ltn12" "src/ltn12.lua"
import "socket.http" "src/http.lua"
import "socket.url" "src/url.lua"
import "socket.tp" "src/tp.lua"
import "socket.ftp" "src/ftp.lua"
import "socket.smtp" "src/smtp.lua"
import "socket.core" "src/socket.so"
import "mime.core" "src/mime.so"
